
// Tire Pressure & Health Monitoring System

// Pins
const int tempPin = A0;
const int tiltPin = 2;
const int hallPin = 3;
const int buzzerPin = 8;
const int redLED = 9;
const int yellowLED = 10;
const int greenLED = 11;

// Hall sensor rotation count
volatile int rotationCount = 0;

// Thresholds
const float tempWarning = 50.0; // °C for warning
const float tempCritical = 70.0; // °C for critical

void setup() {
  // Initialize pins
  pinMode(tiltPin, INPUT_PULLUP);
  pinMode(hallPin, INPUT_PULLUP);
  pinMode(buzzerPin, OUTPUT);
  pinMode(redLED, OUTPUT);
  pinMode(yellowLED, OUTPUT);
  pinMode(greenLED, OUTPUT);

  // Attach interrupt for Hall sensor
  attachInterrupt(digitalPinToInterrupt(hallPin), countRotation, FALLING);

  Serial.begin(9600);
}

void loop() {
  // Read temperature
  int tempValue = analogRead(tempPin);
  float voltage = tempValue * (5.0 / 1023.0);
  float temperatureC = voltage * 100; // LM35 conversion

  // Read tilt sensor
  int tiltState = digitalRead(tiltPin);

  // Check conditions and control LEDs and buzzer
  if (temperatureC >= tempCritical) {
    // Critical temperature
    digitalWrite(redLED, HIGH);
    digitalWrite(yellowLED, LOW);
    digitalWrite(greenLED, LOW);
    digitalWrite(buzzerPin, HIGH);
  } 
  else if (temperatureC >= tempWarning || tiltState == LOW) {
    // Warning temperature or tilt detected
    digitalWrite(redLED, LOW);
    digitalWrite(yellowLED, HIGH);
    digitalWrite(greenLED, LOW);
    digitalWrite(buzzerPin, LOW);
  } 
  else {
    // Normal
    digitalWrite(redLED, LOW);
    digitalWrite(yellowLED, LOW);
    digitalWrite(greenLED, HIGH);
    digitalWrite(buzzerPin, LOW);
  }

  // Print data for monitoring
  Serial.print("Temperature: ");
  Serial.print(temperatureC);
  Serial.print(" °C, Tilt: ");
  Serial.print(tiltState == LOW ? "Detected" : "None");
  Serial.print(", Rotations: ");
  Serial.println(rotationCount);

  delay(1000);
}

// Hall sensor interrupt function
void countRotation() {
  rotationCount++;
}
